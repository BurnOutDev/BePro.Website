                <button id="map-walk"  type="button" class="btn btn-default"><i class="fa fa-male"></i></button>
                <button id="map-drive" type="button" class="btn btn-default"><i class="fa fa-car"></i></button>
            </div>
        </form>
    </div>
    <div id="map"></div>
</div>

<link href="~/Content/Pages/index.css" rel="stylesheet" />
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCykaMLNaxQ0AZp4gHgmM4Y0LCtt02YMVI&amp;callback=initMap" async="" defer=""></script>
<script>
    function initMap() {
        var directionsService = new google.maps.DirectionsService;
        var directionsDisplay = new google.maps.DirectionsRenderer;

        //////////////
        var location = { lat: 41.729216, lng: 44.766390 }

        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
            center: location,
            scrollwheel: false,
            zoom: 16
        });
        var marker = new google.maps.Marker({
            map: map,
            position: location,
            title: 'ბიზნეს კრედიტი'
        });

        directionsDisplay.setMap(map);

        document.getElementById('map-drive').addEventListener('click', function () { calculateAndDisplayRoute(directionsService, directionsDisplay, 'DRIVING'); });
        document.getElementById('map-walk').addEventListener('click', function () { calculateAndDisplayRoute(directionsService, directionsDisplay, 'WALKING'); });

        map.togg
    }


    function calculateAndDisplayRoute(directionsService, directionsDisplay, type) {
        directionsService.route({
            origin: document.getElementById('address-input').value,
            destination: { lat: 41.729216, lng: 44.766390 },
            travelMode: type
        }, function (response, status) {
            if (status === 'OK') {
                directionsDisplay.setDirections(response);
            } else {
                window.alert('Directions request failed due to ' + status);
            }
        });
    }

</script>